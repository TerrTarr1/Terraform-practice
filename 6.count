provider "aws" {  
  region = "ap-northeast-2"
  }

resource "aws_s3_bucket" "this" {
  count = 3                               # count라는 필드는 내부적으로 반복되는 특징이 있어서 이런식으로 사용하게되면 버킷이 3개 생성되게 됩니다.
  bucket = "frozen-bucket-${count.index}"
}

